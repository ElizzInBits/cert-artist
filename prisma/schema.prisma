generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CertificateTemplate {
  id           String   @id @default(cuid())
  name         String
  courseData   Json
  fontConfig   Json
  instructors  Json
  responsibles Json
  conformidade String
  conteudo     String
  observacoes  String?
  useObservacoes Boolean @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("certificate_templates")
}